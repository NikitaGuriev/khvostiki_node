<!-- Меню навигации -->
{{>navbar}}

<div class="container">
  <div class="row">
    <form class="col s12 m12 l12" action="/ad/edit" method="post">
      <div class="card">
        <div class="card-content">
          <div class="row">
            <div class="input-field col s12 m12 l12">
              <i class="material-icons prefix">short_text</i>
              <input id="title" type="text" class="validate" name="title" value="{{AD.title}}" required>
              <label for="title">Заголовок</label>
              <span class="helper-text" data-error="Поле не может быть пустым">Обязательное поле</span>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12 m12 l12">
              <div class="row">
                <div class="input-field col s12 m12 l12">
                  <i class="material-icons prefix">title</i>
                  <textarea name="text" id="text" class="materialize-textarea" cols="20" required>{{AD.text}}</textarea>
                  <label for="text">Описание</label>
                  <span class="helper-text" data-error="Поле не может быть пустым">Обязательное поле</span>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6 m6 l6">
              <i class="material-icons prefix">phone</i>
              <input id="tel" type="tel" class="validate" name="tel" value="{{AD.tel}}" required>
              <label for="tel">Телефон ответственного</label>
              <span class="helper-text" data-error="Поле не может быть пустым">Обязательное поле</span>
            </div>
            <div class="input-field col s6 m6 l6">
              <i class="material-icons prefix">person</i>
              <input id="tel_resp" type="text" class="validate" name="tel_resp" value="{{AD.tel_resp}}" required>
              <label for="tel_resp">Имя ответственного</label>
              <span class="helper-text" data-error="Поле не может быть пустым">Обязательное поле</span>
            </div>
          </div>
          <div class="row center-align">
            <div class="col s12 m12 l12">
              <div class="switch">
                <label>
                  {{#if AD.is_girl}}
                    Мальчик
                    <input type="checkbox" name="is_girl" checked>
                    <span class="lever"></span>
                    Девочка
                  {{else}}
                    Мальчик
                    <input type="checkbox" name="is_girl">
                    <span class="lever"></span>
                    Девочка
                  {{/if}}
                </label>
              </div>
            </div>
          </div>
          <div class="row center-align">
            <div class="col s12 m12 l12">
              <div class="switch">
                <label>
                  {{#if AD.is_dog}}
                    Кошка/кот
                    <input type="checkbox" name="is_dog" checked>
                    <span class="lever"></span>
                    Собака/пёс
                  {{else}}
                    Кошка/кот
                    <input type="checkbox" name="is_dog">
                    <span class="lever"></span>
                    Собака/пёс
                  {{/if}}
                </label>
              </div>
            </div>
          </div>
          <div class="row center-align">
            <div class="col s12 m12 l12">
              <div class="switch">
                <label>
                  {{#if AD.is_adult}}
                    Маленькая/подросток
                    <input type="checkbox" name="is_adult" checked>
                    <span class="lever"></span>
                    Взрослая
                  {{else}}
                    Маленькая/подросток
                    <input type="checkbox" name="is_adult">
                    <span class="lever"></span>
                    Взрослая
                  {{/if}}
                </label>
              </div>
            </div>
          </div>
          <div class="row center-align">
            <div class="col s12 m12 l12">
              <div class="switch">
                <label>
                  {{#if AD.is_sterility}}
                    Не стерильная
                    <input type="checkbox" name="is_sterility" checked>
                    <span class="lever"></span>
                    Стерильная
                  {{else}}
                    Не стерильная
                    <input type="checkbox" name="is_sterility">
                    <span class="lever"></span>
                    Стерильная
                  {{/if}}
                </label>
              </div>
            </div>
          </div>
          <div class="row center-align">
            <div class="col s12 m12 l12">
              <div class="switch">
                <label>
                  {{#if AD.is_castrated}}
                    Не кастрированный
                    <input type="checkbox" name="is_castrated" checked>
                    <span class="lever"></span>
                    Кастрированный
                  {{else}}
                    Не кастрированный
                    <input type="checkbox" name="is_castrated">
                    <span class="lever"></span>
                    Кастрированный
                  {{/if}}
                </label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12 m12 l12">
              <i class="material-icons prefix">link</i>
              <input id="img_link" type="text" class="validate" name="img_link" value="{{AD.img_link}}" required>
              <label for="img_link">Ссылка на изображение</label>
              <span class="helper-text" data-error="Поле не может быть пустым">Обязательное поле</span>
            </div>
          </div>
          <!-- <div class="file-field input-field">
            <div class="btn">
              <span>Загрузить фото</span>
              <input type="file" multiple>
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text" placeholder="Загрузите один или несколько файлов"
                     id="file_input">
              <label for="file_input"></label>
            </div>
          </div> -->
          <div class="row center-align">
            <div class="col s12 m12 l12">
              <input type="hidden" name="id" value="{{AD.id}}">
              <input type="hidden" name="publish_date" value="{{AD.publish_date}}">
              <input type="hidden" name="is_archived" value="{{AD.is_archived}}">
              <input type="hidden" name="_csrf" value="{{csrf}}">
              <button class="waves-effect btn" type="submit">Редактировать</button>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- Футер приложения -->
{{>footer}}

<!-- Скрипты приложения -->
{{>scripts}}