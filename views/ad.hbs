<!-- Меню навигации -->
{{>navbar}}

<main>
  <div class="container slide-from-bottom">
    <div class="row">
      <div class="col s12 m12 l12">
        <div class="card">
          <div class="card-image">
            <img
              src="{{AD.img_link}}"
              alt="Animal photo" class="materialboxed">
          </div>
          <div class="card-content">
            <div class="row">
              <div class="col s12 m12 l12">
                <h4>{{AD.title}}</h4>
              </div>
            </div>
            <div class="row">
              <div class="col s12 m12 l12">
                <p class="flow-text">
                  {{AD.text}}
                </p>
              </div>
            </div>
            <div class="row">
              <div class="col s6 m6 l6">
                <a class="waves-effect btn" href="tel:{{AD.tel}}">
                  {{AD.tel}} {{AD.tel_resp}}
                </a>
              </div>
            </div>
            <div class="row">
              <div class="col s12 m12 l12">
                {{#if AD.is_girl }}
                  <div class="chip">Самка</div>
                {{else}}
                  <div class="chip">Самец</div>
                {{/if}}
                {{#if AD.is_dog }}
                  <div class="chip">Собака</div>
                {{else}}
                  <div class="chip">Кошка</div>
                {{/if}}
                {{#if AD.is_adult }}
                  <div class="chip">Взрослое животное</div>
                {{else}}
                  <div class="chip">Подросток</div>
                {{/if}}
                {{#if AD.is_girl}}
                  {{#if AD.is_sterility }}
                    <div class="chip">Стерильное</div>
                  {{else}}
                    <div class="chip">Не стерильное</div>
                  {{/if}}
                {{else}}
                  {{#if AD.is_castrated }}
                    <div class="chip">Кастрированное</div>
                  {{else}}
                    <div class="chip">Не кастрированное</div>
                  {{/if}}
                {{/if}}
                <div class="chip">{{AD.publish_date}}</div>
                <a href="https://yandex.ru/maps/-/CCUqROHOxA" class="light-blue-text chip tooltipped"
                   target="_blank" data-position="bottom" data-tooltip="Открыть Яндекс.Карты">Пойковский</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<!-- Футер приложения -->
{{>footer}}

<!-- Скрипты приложения -->
{{>scripts}}